<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:text="Detail Lowongan"
            android:textSize="24dip" />

        <TextView
            android:id="@+id/textView_fungsi_kerja"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="textView_fungsi_kerja"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/textView_pendidikan_minimal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="textView_pendidikan_minimal"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/textView_awal_ditayangkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textView_awal_ditayangkan"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/textView_akhir_ditayangkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textView_akhir_ditayangkan"
            android:textSize="18dip" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_kembali" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_rincian_pekerjaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textView_rincian_pekerjaan"
                android:textSize="18dip" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:text="button_kembali" />

</RelativeLayout>